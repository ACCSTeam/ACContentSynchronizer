<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:ACContentSynchronizer.ClientGui.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
        x:Class="ACContentSynchronizer.ClientGui.Windows.MainWindow"
        Icon="\Assets\ac-icon.ico"
        Title="Content Synchronizer"
        Background="#66000000"
        TransparencyLevelHint="AcrylicBlur"
        Height="768"
        Width="1024"
        MinHeight="600"
        MinWidth="800"
        ExtendClientAreaToDecorationsHint="True">

    <Grid RowDefinitions="30,*">
        <Panel Background="#bb000000"
               IsHitTestVisible="False"/>
        <views:Layout Grid.Row="1" />
    </Grid>

</Window>
